<Window x:Class="Sample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="顧客管理" Width="400" SizeToContent="Height">
    <Grid>
        <StackPanel Margin="10">
            <TextBlock Text="名前" FontWeight="Bold"/>
            <TextBox x:Name="NameTextBox"/>

            <TextBlock Text="電話番号" FontWeight="Bold"/>
            <TextBox x:Name="PhoneTextBox"/>

            <TextBlock Text="住所" FontWeight="Bold"/>
            <TextBox x:Name="addressTextBox"/>

            <Image x:Name="MyImage" Width="100" Height="100" Margin="5"/>

            <WrapPanel Margin="5">
                <Button Content="画像" x:Name="PictureButton" Click="PictureButton_Click" Margin="8" Padding="12"/>
                <Button Content="保存" x:Name="SaveButton" Click="SaveButton_Click" Margin="8" Padding="12"/>
                <Button Content="更新" x:Name="UpdateButton" Click="UpdateButton_Click" Margin="8" Padding="12"/>
                <Button Content="取得" x:Name="ReadButton" Click="ReadButton_Click" Margin="8" Padding="12"/>
                <Button Content="削除" x:Name="DeleteButton" Click="DeleteButton_Click" Margin="8" Padding="12"/>
            </WrapPanel>

            <TextBlock Text="検索" FontWeight="Bold"/>
            <TextBox x:Name="SearchTextBox" FontSize="16" TextChanged="SearchTextBox_TextChanged"/>

            <ListView x:Name="PersonListView" Height="600" Margin="0,5,0,0" SelectionChanged="PersonListView_SelectionChanged">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Image Source="{Binding PictureImage}" Width="100" Height="100" Margin="5"/>
                            <StackPanel>
                                <TextBlock Text="{Binding Id}"/>
                                <TextBlock Text="{Binding Name}" FontSize="20"/>
                                <TextBlock Text="{Binding Phone}" Foreground="Blue"/>
                                <TextBlock Text="{Binding Address}" FontStyle="Italic"/>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>
    </Grid>
</Window>