<Window x:Class="WeatherApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="全国天気アプリ" Height="600" Width="450"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" 
        >

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0">

            <!-- ヘッダー -->
            <TextBlock Text="🌎 全国天気アプリ" FontSize="32" FontWeight="Bold" Foreground="White" HorizontalAlignment="Center" Margin="0,0,0,20"/>

            <!-- 都道府県選択 -->
            <ComboBox x:Name="RegionComboBox" Width="250" FontSize="16" Padding="5" SelectionChanged="RegionComboBox_SelectionChanged"
                      Background="White" Foreground="#00796b" BorderBrush="#004d40" BorderThickness="2" />

            <!-- 天気カード -->
            <Border Background="#ffffffcc" CornerRadius="25" Padding="30" Margin="0,30,0,0"
                    >
                <StackPanel HorizontalAlignment="Center">

                    <!-- 都道府県名 -->
                    <TextBlock x:Name="RegionNameText" FontSize="28" FontWeight="Bold" Foreground="#00796b" Margin="0,0,0,15"/>

                    <!-- 天気アイコンと気温 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,25">
                        <TextBlock x:Name="WeatherIconText" FontSize="72"/>
                        <TextBlock x:Name="TemperatureText" FontSize="36" FontWeight="Bold" Margin="25,20,0,0" Foreground="#004d40"/>
                    </StackPanel>

                    <!-- 風速・湿度 -->
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                        <StackPanel Margin="30,0">
                            <TextBlock Text="🌬 風速" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="WindText" FontSize="20" HorizontalAlignment="Center"/>
                        </StackPanel>

                        <StackPanel Margin="30,0">
                            <TextBlock Text="💧 湿度" FontWeight="Bold" HorizontalAlignment="Center"/>
                            <TextBlock x:Name="HumidityText" FontSize="20" HorizontalAlignment="Center"/>
                        </StackPanel>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- 更新ボタン -->
            <Button Content="更新" Width="140" Height="45" HorizontalAlignment="Center" Margin="0,30,0,0"
                    Background="#00796b" Foreground="White" FontWeight="Bold" BorderThickness="0" 
                    Click="RefreshButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
