<Window x:Class="ColorChecker.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ColorChecker"
        mc:Ignorable="d"
        Title="Color Checker" Height="300" Width="700">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- 色のプレビュー -->
        <Label x:Name="colorArea" Margin="10" Background="Black"/>

        <!-- RGB スライダー -->
        <Grid Grid.Column="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="3*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- R -->
            <TextBlock Grid.Column="0" Grid.Row="0" Text="R" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="rSlider" Grid.Row="0" Grid.Column="1" Maximum="255" VerticalAlignment="Center"
                    IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged" />
            <TextBox x:Name="rValue" Grid.Row="0" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right"
                     Text="{Binding ElementName=rSlider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />

            <!-- G -->
            <TextBlock Grid.Row="1" Grid.Column="0" Text="G" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="gSlider" Grid.Row="1" Grid.Column="1" Maximum="255" VerticalAlignment="Center"
                    IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="gValue" Grid.Row="1" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right"
                     Text="{Binding ElementName=gSlider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>

            <!-- B -->
            <TextBlock Grid.Row="2" Grid.Column="0" Text="B" FontSize="30"
                       HorizontalAlignment="Center" VerticalAlignment="Center"/>
            <Slider x:Name="bSlider" Grid.Row="2" Grid.Column="1" Maximum="255" VerticalAlignment="Center"
                    IsSnapToTickEnabled="True" ValueChanged="Slider_ValueChanged"/>
            <TextBox x:Name="bValue" Grid.Row="2" Grid.Column="2" VerticalAlignment="Center" FontSize="20" TextAlignment="Right"
                     Text="{Binding ElementName=bSlider, Path=Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged }" />

            <!-- カラー一覧 -->
            <ComboBox x:Name="colorComboBox" Grid.Row="3" Grid.Column="1" Width="130"
          SelectionChanged="ComboBox_SelectionChanged"
          HorizontalAlignment="Center" VerticalAlignment="Center">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5,0">
                            <!-- 色プレビュー -->
                            <Border Width="20" Height="20" Margin="0,0,5,0" BorderBrush="Black" BorderThickness="1">
                                <Border.Background>
                                    <SolidColorBrush Color="{Binding Color}"/>
                                </Border.Background>
                            </Border>
                            <!-- 色名 -->
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>

        </Grid>


        <Grid Grid.Column="2" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>


            <Button x:Name="stockButton" Grid.Row="0" Content="STOCK" Click="stockButton_Click" Width="200" Height="30" HorizontalAlignment="Center" Margin="0,0,0,10"/>


            <ListBox x:Name="stockList" Grid.Row="1" Margin="0,10,0,0" SelectionChanged="stockList_SelectionChanged" FontSize="16" FontFamily="Consolas">
                <ListBox.Resources>

                    <DataTemplate x:Key="KnownColorTemplate">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" >
                            <TextBlock Text="{Binding Name}" VerticalAlignment="Center" Margin="10,0"/>
                        </StackPanel>
                    </DataTemplate>


                    <DataTemplate x:Key="CustomColorTemplate">
                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                            <TextBlock Text="R:" VerticalAlignment="Center" Margin="10,0,0,0"/>
                            <TextBlock Text="{Binding Color.R}" VerticalAlignment="Center"/>
                            <TextBlock Text=", G:" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Color.G}" VerticalAlignment="Center"/>
                            <TextBlock Text=", B:" VerticalAlignment="Center" />
                            <TextBlock Text="{Binding Color.B}" VerticalAlignment="Center"/>
                            <TextBlock Text="" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.Resources>

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <ContentControl Content="{Binding}">
                            <ContentControl.Style>
                                <Style TargetType="ContentControl">
                                    <Setter Property="ContentTemplate" Value="{StaticResource KnownColorTemplate}"/>
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding IsKnownColor}" Value="False">
                                            <Setter Property="ContentTemplate" Value="{StaticResource CustomColorTemplate}"/>
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ContentControl.Style>
                        </ContentControl>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

    </Grid>
</Window>
